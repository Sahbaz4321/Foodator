<shape xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="rectangle">

<!-- Gradient background -->
<gradient
    android:startColor="#4CAF50"
    android:endColor="#2E7D32"
    android:angle="90" />

<!-- Rounded corners -->
<corners android:radius="30dp" />

<!-- Optional shadow-like effect -->
<padding
    android:left="10dp"
    android:right="10dp"
    android:top="8dp"
    android:bottom="8dp" />

<!-- Optional border (if you want one, else remove this) -->
<stroke
    android:width="2dp"
    android:color="#FFFFFF" />
</shape>
